{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cortex.local/schemas/review-report.schema.json",
  "title": "Cortex Documentation Review Report",
  "type": "object",
  "additionalProperties": false,
  "required": ["generated_at", "status", "totals", "documents"],
  "properties": {
    "generated_at": { "type": "string", "minLength": 1 },
    "status": { "type": "string", "enum": ["pass", "fail"] },
    "totals": {
      "type": "object",
      "additionalProperties": false,
      "required": ["documents", "checks", "failed_checks"],
      "properties": {
        "documents": { "type": "integer", "minimum": 0 },
        "checks": { "type": "integer", "minimum": 0 },
        "failed_checks": { "type": "integer", "minimum": 0 }
      }
    },
    "documents": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "status", "metrics", "checks"],
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "status": { "type": "string", "enum": ["pass", "fail"] },
          "metrics": {
            "type": "object",
            "additionalProperties": false,
            "required": ["word_count", "bullet_ratio", "citation_count"],
            "properties": {
              "word_count": { "type": "integer", "minimum": 0 },
              "bullet_ratio": { "type": "number", "minimum": 0 },
              "citation_count": { "type": "integer", "minimum": 0 }
            }
          },
          "checks": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["name", "status", "message"],
              "properties": {
                "name": { "type": "string", "minLength": 1 },
                "status": { "type": "string", "enum": ["pass", "fail"] },
                "message": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
